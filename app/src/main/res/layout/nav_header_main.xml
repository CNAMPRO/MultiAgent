<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <Switch
        android:id="@+id/activationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activation" />

    <TextView
        android:id="@+id/textViewRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Red :" />

    <EditText
        android:id="@+id/redColor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Green :" />

    <EditText
        android:id="@+id/greenColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blue :" />

    <EditText
        android:id="@+id/blueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taux de phÃ©romones :" />

    <EditText
        android:id="@+id/tauxPheromones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de nids" />

    <EditText
        android:id="@+id/nbNids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taille :" />

    <EditText
        android:id="@+id/itemSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <TextView
        android:id="@+id/textViewRed7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vitesse :" />

    <EditText
        android:id="@+id/itemsSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

</LinearLayout>
